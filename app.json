{
  "expo": {
    "name": "Purple School Native App",
    "displayName": "Purple School Native App",
    "slug": "purple-school-native-app",
    "description": "Приложение для прохождения курсов на платформе Purple School",
    "platforms": ["ios", "android"],
    "githubUrl": "https://github.com/NKolosov097/purple-school-native-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#16171D"
    },
    "scheme": "purple-school-app",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "backgroundColor": "#16171D",
    "primaryColor": "#6C38CC",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.purpleschool.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.purpleschool.app",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["android.permission.RECORD_AUDIO"]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 350,
          "backgroundColor": "#16171D",
          "resizeMode": "contain"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/FiraSans-Regular.ttf",
            "./assets/fonts/FiraSans-SemiBold.ttf"
          ]
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icons/notifications/notification-icon.png",
          "color": "#16171D"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Необходимо разрешение для выбора фото профиля"
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "owner": "nkolosov097",
    "extra": {
      "eas": {
        "projectId": "8edc66e3-ff7d-4bdf-b43b-9640ddc436d3"
      }
    }
  }
}
